{{template "ng/base/head" .}}
{{template "ng/base/header" .}}
<div id="repo-wrapper">
    {{template "repo/header" .}}
    <form class="form form-align panel panel-radius" action="{{.RepoLink}}/wiki/new" method="post" id="wiki-page-create-form">
        {{.CsrfTokenHtml}}
        <div class="panel-header">
            <h2>{{.Title}}</h2>
            <input type="hidden" name="title" value="{{.Title}}">
        </div>
        <div class="panel-content">
            {{template "ng/base/alert" .}}
            <div class="field clear">
                <textarea class="ipt ipt-large ipt-radius {{if .Err_PageContent}}ipt-error{{end}}" id="page-content" name="content">{{.content}}</textarea>
            </div>
            <div class="field">
                <button class="btn btn-large btn-blue btn-radius">{{.i18n.Tr "repo.wiki.create_page"}}</button>
                <a class="btn btn-small btn-gray btn-radius" id="wiki-page-create-cancel" href="{{.RepoLink}}"><strong>Cancel</strong></a>
            </div>
        </div>
    </form>
</div>
{{template "ng/base/footer" .}}